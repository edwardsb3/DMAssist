<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:text="Tartuga"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/darker_gray" />


    <TextView
        android:id="@+id/armor_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        app:layout_constraintLeft_toRightOf="@id/name"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="11"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/hit_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/armor_class"
        android:layout_marginTop="5dp"
        android:text="11"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/passive_perception"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/hit_points"
        android:layout_marginTop="5dp"
        android:text="11"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/inspiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/passive_perception"
        android:layout_marginTop="5dp"
        android:text="11"
        android:textColor="@android:color/black" />





</android.support.constraint.ConstraintLayout>

