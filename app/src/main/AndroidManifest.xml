<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brentonedwards.dmassist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CharacterList"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_create_character" />
        <activity
            android:name=".CharacterDetailActivity"
            android:label="@string/title_activity_edit_character"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CharacterActionsActivity"
            android:label="@string/title_activity_character_actions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SpecialAbilitiesActivity"
            android:label="@string/title_activity_special_abilities"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>